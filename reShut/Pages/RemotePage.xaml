<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="reShut.Pages.RemotePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="40" RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock Text="Remote Control" Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock Text="Manage power on remote Windows computers in your network" 
                       Style="{StaticResource BodyTextBlockStyle}" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="16" MaxWidth="600" HorizontalAlignment="Left">
                
                <!-- Target Computer -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Target Computer" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <TextBox x:Name="HostBox" 
                                 Header="Hostname or IP Address"
                                 PlaceholderText="e.g., 192.168.1.100 or COMPUTER-NAME"/>
                    </StackPanel>
                </Border>

                <!-- Credentials (Optional) -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="Credentials" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBlock Text="(Optional)" 
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       VerticalAlignment="Bottom"/>
                        </StackPanel>
                        
                        <TextBlock Text="Leave empty to use current user credentials" 
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        
                        <TextBox x:Name="UserBox" 
                                 Header="Username"
                                 PlaceholderText="DOMAIN\Username or Username"/>
                        
                        <PasswordBox x:Name="PassBox" 
                                     Header="Password"
                                     PlaceholderText="Password"/>
                    </StackPanel>
                </Border>

                <!-- Action Selection -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="24">
                    <StackPanel Spacing="16">
                        <TextBlock Text="Action" Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <RadioButtons x:Name="ActionButtons" SelectedIndex="0">
                            <RadioButton Content="Shutdown" Tag="shutdown"/>
                            <RadioButton Content="Restart" Tag="restart"/>
                        </RadioButtons>
                    </StackPanel>
                </Border>

                <!-- Execute Button -->
                <Button x:Name="ExecButton" 
                        Content="Execute Remote Action" 
                        Style="{StaticResource AccentButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Click="ExecuteButton_Click"/>

                <!-- Status -->
                <InfoBar x:Name="StatusBar"
                         IsOpen="False"
                         IsClosable="True"/>

                <!-- Warning -->
                <InfoBar Title="Important"
                         Message="Remote power management requires proper network configuration and WMI access on the target computer. Make sure the target computer allows remote management."
                         Severity="Warning"
                         IsOpen="True"
                         IsClosable="False"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
