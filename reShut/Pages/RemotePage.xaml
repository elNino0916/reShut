<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="reShut.Pages.RemotePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="40" RowSpacing="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="4">
            <TextBlock Text="Remote Control" Style="{StaticResource TitleLargeTextBlockStyle}" FontWeight="SemiBold"/>
            <TextBlock Text="Manage power on remote Windows computers in your network" 
                       Style="{StaticResource BodyTextBlockStyle}" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Opacity="0.8"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20" MaxWidth="640" HorizontalAlignment="Left">
                
                <!-- Target Computer -->
                <Border Style="{StaticResource ElevatedCardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Width="40" Height="40" CornerRadius="20" 
                                    Background="{ThemeResource AccentFillColorDefaultBrush}">
                                <FontIcon Glyph="&#xE703;" FontSize="18" Foreground="White"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Target Computer" Style="{StaticResource SubtitleTextBlockStyle}" 
                                       VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                        <TextBox x:Name="HostBox" 
                                 Header="Hostname or IP Address"
                                 PlaceholderText="e.g., 192.168.1.100 or COMPUTER-NAME"
                                 Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Credentials (Optional) -->
                <Border Style="{StaticResource ElevatedCardStyle}">
                    <StackPanel Spacing="16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <Border Width="40" Height="40" CornerRadius="20" 
                                        Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                                    <FontIcon Glyph="&#xE8D7;" FontSize="18" 
                                              Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Credentials" Style="{StaticResource SubtitleTextBlockStyle}" 
                                           VerticalAlignment="Center" FontWeight="SemiBold"/>
                            </StackPanel>
                            <Border Grid.Column="2" Style="{StaticResource StatusBadgeStyle}" VerticalAlignment="Center">
                                <TextBlock Text="Optional" Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </Border>
                        </Grid>
                        
                        <TextBlock Text="Leave empty to use current user credentials" 
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   Opacity="0.8"/>
                        
                        <TextBox x:Name="UserBox" 
                                 Header="Username"
                                 PlaceholderText="DOMAIN\Username or Username"/>
                        
                        <PasswordBox x:Name="PassBox" 
                                     Header="Password"
                                     PlaceholderText="Password"/>
                    </StackPanel>
                </Border>

                <!-- Action Selection -->
                <Border Style="{StaticResource ElevatedCardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Width="40" Height="40" CornerRadius="20" 
                                    Background="{ThemeResource AccentFillColorDefaultBrush}">
                                <FontIcon Glyph="&#xE7E8;" FontSize="18" Foreground="White"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Action" Style="{StaticResource SubtitleTextBlockStyle}" 
                                       VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                        <RadioButtons x:Name="ActionButtons" SelectedIndex="0" Margin="0,8,0,0">
                            <RadioButton Content="Shutdown" Tag="shutdown"/>
                            <RadioButton Content="Restart" Tag="restart"/>
                        </RadioButtons>
                    </StackPanel>
                </Border>

                <!-- Execute Button -->
                <Button x:Name="ExecButton" 
                        Style="{StaticResource LargeActionButtonStyle}"
                        Margin="0,8,0,0"
                        Click="ExecuteButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <FontIcon Glyph="&#xE768;" FontSize="16"/>
                        <TextBlock Text="Execute Remote Action"/>
                    </StackPanel>
                </Button>

                <!-- Status -->
                <InfoBar x:Name="StatusBar"
                         IsOpen="False"
                         IsClosable="True"
                         CornerRadius="8"/>

                <!-- Warning -->
                <InfoBar Title="Important"
                         Message="Remote power management requires proper network configuration and WMI access on the target computer. Make sure the target computer allows remote management."
                         Severity="Warning"
                         IsOpen="True"
                         IsClosable="False"
                         CornerRadius="8"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
