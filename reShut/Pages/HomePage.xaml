<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="reShut.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Padding="40" RowSpacing="28" MinWidth="400">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Spacing="4">
                <TextBlock Text="Power Control" Style="{StaticResource TitleLargeTextBlockStyle}" FontWeight="SemiBold"/>
                <TextBlock Text="Manage your system's power state" 
                           Style="{StaticResource BodyTextBlockStyle}" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           Opacity="0.8"/>
            </StackPanel>

            <!-- Power Options -->
            <StackPanel Grid.Row="1" Spacing="20">
                <!-- Cards Row -->
                <Grid ColumnSpacing="16" RowSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="180"/>
                        <ColumnDefinition Width="*" MinWidth="180"/>
                        <ColumnDefinition Width="*" MinWidth="180"/>
                    </Grid.ColumnDefinitions>

                    <!-- Shutdown Card -->
                    <Border Grid.Column="0" Style="{StaticResource FeatureCardStyle}">
                        <StackPanel Spacing="16">
                            <Border Width="56" Height="56" CornerRadius="28" 
                                    HorizontalAlignment="Left"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}">
                                <FontIcon Glyph="&#xE7E8;" FontSize="24" Foreground="White" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Spacing="6">
                                <TextBlock Text="Shutdown" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="SemiBold"/>
                                <TextBlock Text="Turn off your computer completely." 
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Opacity="0.8"/>
                            </StackPanel>
                            <Button x:Name="ShutdownBtn" 
                                    Content="Shutdown" 
                                    Style="{StaticResource LargeActionButtonStyle}"
                                    Click="ShutdownButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Restart Card -->
                    <Border Grid.Column="1" Style="{StaticResource FeatureCardStyle}">
                        <StackPanel Spacing="16">
                            <Border Width="56" Height="56" CornerRadius="28" 
                                    HorizontalAlignment="Left"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}">
                                <FontIcon Glyph="&#xE72C;" FontSize="24" Foreground="White"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Spacing="6">
                                <TextBlock Text="Restart" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="SemiBold"/>
                                <TextBlock Text="Restart your computer." 
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Opacity="0.8"/>
                            </StackPanel>
                            <Button x:Name="RestartBtn" 
                                    Content="Restart" 
                                    Style="{StaticResource LargeActionButtonStyle}"
                                    Click="RestartButton_Click"/>
                        </StackPanel>
                    </Border>

                    <!-- Sign Out Card -->
                    <Border Grid.Column="2" Style="{StaticResource FeatureCardStyle}">
                        <StackPanel Spacing="16">
                            <Border Width="56" Height="56" CornerRadius="28" 
                                    HorizontalAlignment="Left"
                                    Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                                <FontIcon Glyph="&#xE77B;" FontSize="24" 
                                          Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel Spacing="6">
                                <TextBlock Text="Sign Out" Style="{StaticResource SubtitleTextBlockStyle}" FontWeight="SemiBold"/>
                                <TextBlock Text="Log off from your account." 
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextWrapping="Wrap"
                                           Opacity="0.8"/>
                            </StackPanel>
                            <Button x:Name="LogoffBtn" 
                                    Content="Sign Out" 
                                    Style="{StaticResource SecondaryActionButtonStyle}"
                                    Click="LogoffButton_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Admin Status Card -->
                <Border Style="{StaticResource ElevatedCardStyle}" Padding="20">
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Status Icon -->
                        <Border x:Name="AdminIconBorder" Grid.Column="0" 
                                Width="44" Height="44" CornerRadius="22"
                                VerticalAlignment="Center">
                            <FontIcon x:Name="AdminIcon" Glyph="&#xE7EF;" FontSize="20" 
                                      Foreground="White"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Status Text -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                            <TextBlock x:Name="AdminText" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock x:Name="AdminDesc" 
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Opacity="0.8"/>
                        </StackPanel>
                        
                        <!-- Status Badge -->
                        <Border x:Name="StatusBadge" Grid.Column="2" 
                                Style="{StaticResource StatusBadgeStyle}"
                                VerticalAlignment="Center">
                            <TextBlock x:Name="StatusBadgeText" 
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
