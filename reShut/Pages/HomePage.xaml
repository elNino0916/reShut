<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="reShut.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="40" RowSpacing="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock Text="Power Control" Style="{StaticResource TitleLargeTextBlockStyle}"/>
            <TextBlock Text="Manage your system's power state" 
                       Style="{StaticResource BodyTextBlockStyle}" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>

        <!-- Power Options Grid -->
        <Grid Grid.Row="1" ColumnSpacing="16" RowSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Shutdown Card -->
            <Border Grid.Column="0" Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                <StackPanel Spacing="16">
                    <FontIcon Glyph="&#xE7E8;" FontSize="48" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                    <TextBlock Text="Shutdown" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="Turn off your computer completely" 
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"/>
                    <Button x:Name="ShutdownBtn" 
                            Content="Shutdown" 
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Click="ShutdownButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Restart Card -->
            <Border Grid.Column="1" Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                <StackPanel Spacing="16">
                    <FontIcon Glyph="&#xE72C;" FontSize="48" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                    <TextBlock Text="Restart" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="Restart your computer" 
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"/>
                    <Button x:Name="RestartBtn" 
                            Content="Restart" 
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Click="RestartButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Sign Out Card -->
            <Border Grid.Column="2" Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                <StackPanel Spacing="16">
                    <FontIcon Glyph="&#xE77B;" FontSize="48" Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                    <TextBlock Text="Sign Out" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="Log off from your account" 
                               Style="{StaticResource CaptionTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap"/>
                    <Button x:Name="LogoffBtn" 
                            Content="Sign Out" 
                            HorizontalAlignment="Stretch"
                            Click="LogoffButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Admin Status -->
            <Border Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <FontIcon x:Name="AdminIcon" Grid.Column="0" Glyph="&#xE7EF;" FontSize="20" 
                              Margin="0,0,12,0" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="AdminText" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <TextBlock x:Name="AdminDesc" 
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
