<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="reShut.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="40" RowSpacing="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="4">
            <TextBlock Text="Settings" Style="{StaticResource TitleLargeTextBlockStyle}" FontWeight="SemiBold"/>
            <TextBlock Text="Configure reShut preferences" 
                       Style="{StaticResource BodyTextBlockStyle}" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Opacity="0.8"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="8" MaxWidth="800" HorizontalAlignment="Left">
                
                <!-- Appearance Section -->
                <TextBlock Text="Appearance" 
                           Style="{StaticResource BodyStrongTextBlockStyle}"
                           Margin="0,0,0,12"
                           Opacity="0.7"/>
                
                <Border Style="{StaticResource ElevatedCardStyle}" Padding="20">
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Width="44" Height="44" CornerRadius="22" 
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE771;" FontSize="20" 
                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                            <TextBlock Text="App Theme" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="Select which app theme to display" 
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Opacity="0.8"/>
                        </StackPanel>
                        
                        <ComboBox x:Name="ThemeSelector" 
                                  Grid.Column="2" 
                                  Width="160"
                                  VerticalAlignment="Center"
                                  SelectionChanged="ThemeComboBox_SelectionChanged">
                            <ComboBoxItem Content="System Default" Tag="Default"/>
                            <ComboBoxItem Content="Light" Tag="Light"/>
                            <ComboBoxItem Content="Dark" Tag="Dark"/>
                        </ComboBox>
                    </Grid>
                </Border>

                <!-- Behavior Section -->
                <TextBlock Text="Behavior" 
                           Style="{StaticResource BodyStrongTextBlockStyle}"
                           Margin="0,28,0,12"
                           Opacity="0.7"/>

                <Border Style="{StaticResource ElevatedCardStyle}" Padding="20">
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Width="44" Height="44" CornerRadius="22" 
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE8C9;" FontSize="20" 
                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                            <TextBlock Text="Confirmation Dialogs" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="Show confirmation before executing power actions" 
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Opacity="0.8"/>
                        </StackPanel>
                        
                        <ToggleSwitch x:Name="ConfirmToggle" 
                                      Grid.Column="2" 
                                      IsOn="True"
                                      OnContent="" OffContent=""
                                      VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource ElevatedCardStyle}" Padding="20">
                    <Grid ColumnSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Width="44" Height="44" CornerRadius="22" 
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                VerticalAlignment="Center">
                            <FontIcon Glyph="&#xE74D;" FontSize="20" 
                                      Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                            <TextBlock Text="Force Close Applications" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                            <TextBlock Text="Force close applications on shutdown/restart" 
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       Opacity="0.8"/>
                        </StackPanel>
                        
                        <ToggleSwitch x:Name="ForceToggle" 
                                      Grid.Column="2" 
                                      IsOn="True"
                                      OnContent="" OffContent=""
                                      VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- About Section -->
                <TextBlock Text="About" 
                           Style="{StaticResource BodyStrongTextBlockStyle}"
                           Margin="0,28,0,12"
                           Opacity="0.7"/>

                <Border Style="{StaticResource FeatureCardStyle}">
                    <StackPanel Spacing="20">
                        <Grid ColumnSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Width="80" Height="80" CornerRadius="16" 
                                    Background="{ThemeResource AccentFillColorDefaultBrush}">
                                <FontIcon Glyph="&#xE7E8;" FontSize="36" Foreground="White"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="4">
                                <TextBlock Text="reShut" Style="{StaticResource TitleTextBlockStyle}" FontWeight="SemiBold"/>
                                <Border Style="{StaticResource StatusBadgeStyle}" HorizontalAlignment="Left">
                                    <TextBlock x:Name="VersionText" 
                                               Text="Version 1.0.0" 
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                        
                        <TextBlock Text="An easy-to-use tool that aims to streamline and improve the management of system reboots and shutdowns on Windows computers." 
                                   Style="{StaticResource BodyTextBlockStyle}"
                                   TextWrapping="Wrap"
                                   Opacity="0.9"/>
                        
                        <!-- Update Status InfoBar -->
                        <InfoBar x:Name="UpdateInfoBar"
                                 IsOpen="False"
                                 IsClosable="True"
                                 CornerRadius="8"/>
                        
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button x:Name="GitHubButton" 
                                    Style="{StaticResource PillButtonStyle}"
                                    Click="GitHubButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE8A7;" FontSize="14"/>
                                    <TextBlock Text="View on GitHub"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="UpdateButton" 
                                    Style="{StaticResource SubtleButtonStyle}"
                                    Click="UpdateButton_Click">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon x:Name="UpdateIcon" Glyph="&#xE946;" FontSize="14"/>
                                    <TextBlock x:Name="UpdateButtonText" Text="Check for Updates"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
