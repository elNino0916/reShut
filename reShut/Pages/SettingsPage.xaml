<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="reShut.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer>
        <StackPanel Padding="56,40,56,40" Spacing="32">
            
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Settings" 
                           Style="{StaticResource TitleLargeTextBlockStyle}" 
                           FontWeight="SemiBold"
                           FontSize="32"/>
                <TextBlock Text="Customize your reShut experience" 
                           Style="{StaticResource BodyTextBlockStyle}" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Settings Content -->
            <Grid ColumnSpacing="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MaxWidth="600"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Settings -->
                <StackPanel Grid.Column="0" Spacing="24">
                    
                    <!-- Appearance Section -->
                    <StackPanel Spacing="12">
                        <TextBlock Text="APPEARANCE" 
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontWeight="SemiBold"
                                   CharacterSpacing="60"/>
                        
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <FontIcon Glyph="&#xE790;" FontSize="20" 
                                          Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0"/>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Theme" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                    <TextBlock Text="Choose your preferred color scheme" 
                                               Style="{StaticResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>
                                
                                <ComboBox x:Name="ThemeSelector" 
                                          Grid.Column="2" 
                                          Width="150"
                                          VerticalAlignment="Center"
                                          SelectionChanged="ThemeComboBox_SelectionChanged">
                                    <ComboBoxItem Content="System" Tag="Default"/>
                                    <ComboBoxItem Content="Light" Tag="Light"/>
                                    <ComboBoxItem Content="Dark" Tag="Dark"/>
                                </ComboBox>
                            </Grid>
                        </Border>
                    </StackPanel>
                    
                    <!-- Behavior Section -->
                    <StackPanel Spacing="12">
                        <TextBlock Text="BEHAVIOR" 
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontWeight="SemiBold"
                                   CharacterSpacing="60"/>
                        
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <StackPanel>
                                <!-- Confirmation Dialogs -->
                                <Grid Padding="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <FontIcon Glyph="&#xE8BD;" FontSize="20" 
                                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,16,0"/>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Confirmation dialogs" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Ask before executing power actions" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    
                                    <ToggleSwitch x:Name="ConfirmToggle" 
                                                  Grid.Column="2" 
                                                  IsOn="True"
                                                  OnContent="" OffContent=""
                                                  VerticalAlignment="Center"
                                                  Toggled="ConfirmToggle_Toggled"/>
                                </Grid>
                                
                                <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                                
                                <!-- Force Close -->
                                <Grid Padding="16">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <FontIcon Glyph="&#xE711;" FontSize="20" 
                                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,16,0"/>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Force close apps" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Close all applications without saving" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    
                                    <ToggleSwitch x:Name="ForceToggle" 
                                                  Grid.Column="2" 
                                                  IsOn="True"
                                                  OnContent="" OffContent=""
                                                  VerticalAlignment="Center"
                                                  Toggled="ForceToggle_Toggled"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Updates Section -->
                    <StackPanel Spacing="12">
                        <TextBlock Text="UPDATES" 
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontWeight="SemiBold"
                                   CharacterSpacing="60"/>
                        
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="16">
                            <StackPanel Spacing="12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <FontIcon Glyph="&#xE896;" FontSize="20" 
                                              Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,16,0"/>
                                    
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Check for updates" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                                        <TextBlock Text="Keep reShut up to date" 
                                                   Style="{StaticResource CaptionTextBlockStyle}"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>
                                    
                                    <Button x:Name="UpdateButton" 
                                            Grid.Column="2"
                                            Style="{StaticResource AccentButtonStyle}"
                                            CornerRadius="6"
                                            Click="UpdateButton_Click">
                                        <StackPanel Orientation="Horizontal" Spacing="8">
                                            <FontIcon x:Name="UpdateIcon" Glyph="&#xE895;" FontSize="14"/>
                                            <TextBlock x:Name="UpdateButtonText" Text="Check now"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                                
                                <InfoBar x:Name="UpdateInfoBar"
                                         IsOpen="False"
                                         IsClosable="True"
                                         CornerRadius="6"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- Right Column - About Card -->
                <Border Grid.Column="1" 
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="24"
                        Width="280"
                        VerticalAlignment="Top">
                    <StackPanel Spacing="20">
                        <!-- App Icon -->
                        <Border Width="64" Height="64" CornerRadius="12" 
                                Background="{ThemeResource AccentFillColorDefaultBrush}"
                                HorizontalAlignment="Center">
                            <FontIcon Glyph="&#xE7E8;" FontSize="28" Foreground="White"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- App Info -->
                        <StackPanel Spacing="4" HorizontalAlignment="Center">
                            <TextBlock Text="reShut" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       FontWeight="SemiBold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="VersionText" 
                                       Text="Version 1.0.0" 
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                        
                        <!-- Developer Info -->
                        <StackPanel Spacing="12" HorizontalAlignment="Center">
                            <Grid Width="48" Height="48" HorizontalAlignment="Center">
                                <Image x:Name="LogoLight" 
                                       Source="/Assets/eN-Black.png" 
                                       Width="48" Height="48"/>
                                <Image x:Name="LogoDark" 
                                       Source="/Assets/eN-White.png" 
                                       Width="48" Height="48"
                                       Visibility="Collapsed"/>
                            </Grid>
                            <StackPanel Spacing="2" HorizontalAlignment="Center">
                                <TextBlock Text="elNino0916" 
                                           Style="{StaticResource BodyStrongTextBlockStyle}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Â© 2025-2026" 
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <Border Height="1" Background="{ThemeResource DividerStrokeColorDefaultBrush}"/>
                        
                        <!-- Links -->
                        <Button x:Name="GitHubButton" 
                                HorizontalAlignment="Stretch"
                                HorizontalContentAlignment="Center"
                                CornerRadius="6"
                                Click="GitHubButton_Click">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE8A7;" FontSize="16"/>
                                <TextBlock Text="View on GitHub"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Page>
