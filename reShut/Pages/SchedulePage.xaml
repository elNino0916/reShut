<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="reShut.Pages.SchedulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="Transparent">

    <Grid Padding="40" RowSpacing="28">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="4">
            <TextBlock Text="Schedule" Style="{StaticResource TitleLargeTextBlockStyle}" FontWeight="SemiBold"/>
            <TextBlock Text="Schedule a shutdown or restart at a specific time" 
                       Style="{StaticResource BodyTextBlockStyle}" 
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Opacity="0.8"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20" MaxWidth="640" HorizontalAlignment="Left">
                
                <!-- Action Selection -->
                <Border Style="{StaticResource ElevatedCardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Width="40" Height="40" CornerRadius="20" 
                                    Background="{ThemeResource AccentFillColorDefaultBrush}">
                                <FontIcon Glyph="&#xE7E8;" FontSize="18" Foreground="White"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Action" Style="{StaticResource SubtitleTextBlockStyle}" 
                                       VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                        <RadioButtons x:Name="ActionButtons" SelectedIndex="0" Margin="0,8,0,0">
                            <RadioButton Content="Shutdown" Tag="shutdown"/>
                            <RadioButton Content="Restart" Tag="restart"/>
                        </RadioButtons>
                    </StackPanel>
                </Border>

                <!-- Time Selection -->
                <Border Style="{StaticResource ElevatedCardStyle}">
                    <StackPanel Spacing="20">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Width="40" Height="40" CornerRadius="20" 
                                    Background="{ThemeResource AccentFillColorDefaultBrush}">
                                <FontIcon Glyph="&#xE823;" FontSize="18" Foreground="White"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Delay" Style="{StaticResource SubtitleTextBlockStyle}" 
                                       VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                        
                        <Grid ColumnSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <NumberBox x:Name="HoursInput" 
                                       Header="Hours" 
                                       Value="0" 
                                       Minimum="0" 
                                       Maximum="24"
                                       SpinButtonPlacementMode="Inline"/>
                            
                            <NumberBox x:Name="MinutesInput" 
                                       Grid.Column="1"
                                       Header="Minutes" 
                                       Value="30" 
                                       Minimum="0" 
                                       Maximum="59"
                                       SpinButtonPlacementMode="Inline"/>
                        </Grid>

                        <!-- Summary with icon -->
                        <Border Background="{ThemeResource SubtleFillColorSecondaryBrush}"
                                CornerRadius="8" Padding="16,12">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <FontIcon Glyph="&#xE8BE;" FontSize="16" 
                                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="SummaryText" 
                                           Style="{StaticResource CaptionTextBlockStyle}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Quick Presets -->
                <Border Style="{StaticResource ElevatedCardStyle}">
                    <StackPanel Spacing="16">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Border Width="40" Height="40" CornerRadius="20" 
                                    Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                                <FontIcon Glyph="&#xE945;" FontSize="18" 
                                          Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Quick Presets" Style="{StaticResource SubtitleTextBlockStyle}" 
                                       VerticalAlignment="Center" FontWeight="SemiBold"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                            <Button Content="15 min" Style="{StaticResource PillButtonStyle}" Click="Preset15_Click"/>
                            <Button Content="30 min" Style="{StaticResource PillButtonStyle}" Click="Preset30_Click"/>
                            <Button Content="1 hour" Style="{StaticResource PillButtonStyle}" Click="Preset60_Click"/>
                            <Button Content="2 hours" Style="{StaticResource PillButtonStyle}" Click="Preset120_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Grid ColumnSpacing="16" Margin="0,8,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button x:Name="ScheduleBtn" 
                            Style="{StaticResource LargeActionButtonStyle}"
                            Click="ScheduleButton_Click">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE8FB;" FontSize="16"/>
                            <TextBlock Text="Schedule"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="CancelBtn" 
                            Grid.Column="1"
                            Style="{StaticResource SecondaryActionButtonStyle}"
                            Click="CancelButton_Click">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <FontIcon Glyph="&#xE711;" FontSize="16"/>
                            <TextBlock Text="Cancel Scheduled"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Status -->
                <InfoBar x:Name="StatusBar"
                         IsOpen="False"
                         IsClosable="True"
                         CornerRadius="8"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
